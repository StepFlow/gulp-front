/**
 * Base
 */
$base-bg-color = #fff
$base-text-color = $gray-9
$base-loud-color = #000
$base-font-family = roboto
$base-font-size = 1.6em
$base-line-height = 1.8125
$fixed-font-family = mono
/**
 * Headings
 */
$heading-font-family = roboto
$heading-color = $base-text-color
$heading-font-weight = 300
/**
 * Links
 */
$link-color = $blue-7
$link-hover-color = $red-7
$link-visited-color = $violet-8
/**
 * Forms
 * Default style
 */
/* Color */
$form-color-active = $blue-6
$form-color-border = $gray-4
$form-color-background = #fff
$form-color-placeholder = $gray-6
$form-color-font = $base-text-color
$form-color-background_disabled = $gray-0
$form-color-border_focus = $blue-6
$form-color-border_invalid = $red-6
/* Font */
$form-font-size = 13px
/* Padding */
$form-padding_horizontal = 18px
$form-padding_vertical = ceil(($form-padding_horizontal / 2))
/* Size */
$form-size-input-height = 40px
$form-input-width-inline = em(280px)
/* Border */
$form-border_default = 1px solid $form-color-border
$form-border-radius = 3px
/* Fonts */
roboto = "Roboto", Arial, "Helvetica Neue", Helvetica, sans-serif
/* Project variables */
$content-width = 960px
$mobile-padding = 24px
$container-width = $container-width = $content-width + (24px * 2)
