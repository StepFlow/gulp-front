include ../../button/button
include ../../modal/modal
include ../../embed/embed
include ../../dialog/dialog


.demo.demo_buttons
	+button(
		style="solid rounded" 
		color="blue" 
		data-micromodal-trigger="modal-alert" 
	) Open alert dialog
	+button(
		style="solid rounded" 
		color="blue" 
		data-micromodal-trigger="modal-responsive" 
	) Open responsive dialog

+modal(id="modal-alert")
	+dialog(
		id="dialog-alert" 
		title="Get this party started?"
	)
		main.dialog__content
			p Lorem ipsum dolor sit amet, consectetur adipisicing elit unde sint debitis in magnam vel pariatur libero nisi minima.

		footer.dialog__footer
			+button(
				style="text rounded"
				color="indigo"
				aria-label="Close this dialog window"
				data-micromodal-close 
			) Decline
			+button(
				style="text rounded"
				color="indigo"
			) Accept


+modal(id="modal-responsive")
	+dialog(
		id="dialog-responsive" 
		title="Rick Astley - Never Gonna Give You Up"
		style="default responsive"
	)
		main.dialog__content
			+embed().embed_16x9
				iframe(
					width="560" 
					height="315" 
					src="https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0&amp;showinfo=0&enablejsapi=1"
					rameborder="0" 
					allow="autoplay; encrypted-media" 
					allowfullscreen
				)
